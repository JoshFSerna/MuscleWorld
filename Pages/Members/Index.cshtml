@page
@model MuscleWorld.Pages.Members.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">

</head>

<h1>Members List</h1>

<p>
    <a asp-page="Create" class="btn btn-primary" >Create New</a>
</p>

<form>
    <p>
        <input type="text" asp-for="SearchStringID" /> ID: 
        <br />
        <input type="text" asp-for="SearchStringFirstName" /> First Name: 
        <br />
        <input type="text" asp-for="SearchStringLastName" /> Last Name: 
        <br/>
        
            <input type="submit" value="Search" />
        
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                First Name
                <!--@Html.DisplayNameFor(model => model.Member[0].FirstName)-->
            </th>
            <th>
                Last Name
                <!--@Html.DisplayNameFor(model => model.Member[0].LastName)-->
            </th>
            <th>
                Age
                <!--@Html.DisplayNameFor(model => model.Member[0].age)-->
            </th>
            <th>
                Membership Expiration Date
                <!--@Html.DisplayNameFor(model => model.Member[0].MembershipExpiration)-->
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Member) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MembershipExpiration.Date)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID" class="btn">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID" class="btn">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID" class="btn">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

